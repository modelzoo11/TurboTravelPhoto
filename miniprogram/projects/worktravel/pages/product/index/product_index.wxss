@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.list {
	margin-top: 10rpx;
	background-color: #fff;
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
	padding: 0 20rpx;
}

.list .item {
	width: calc((100% - 20rpx)/2);
	margin-bottom: 20rpx;
}

.list .item:nth-child(2n+1) {
	margin-right: 20rpx;
}

.list .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	position: relative;
	overflow: hidden;
}

.list .item .item-inner image {
	width: 100%;
	height: 270rpx;
	border-radius: 16rpx;
}

.list .item .item-inner .title {
	text-align: center;
	color: #fff;
	font-size: 24rpx;
	margin-top: 20rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	z-index: 99;
	padding: 14rpx 30rpx;
	background-color: rgba(0, 0, 0, .4);
	border-radius: 10rpx;

}

.shadow {
	box-shadow: 6rpx 9rpx 8rpx #ddd;
}